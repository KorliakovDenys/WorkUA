@model WorkUA.Pages.Applicants.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Applicant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Applicant.Surname" class="control-label"></label>
                <input asp-for="Applicant.Surname" class="form-control" />
                <span asp-validation-for="Applicant.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Applicant.Name" class="control-label"></label>
                <input asp-for="Applicant.Name" class="form-control" />
                <span asp-validation-for="Applicant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Applicant.Experience" class="control-label"></label>
                <input asp-for="Applicant.Experience" class="form-control" />
                <span asp-validation-for="Applicant.Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Applicant.CityId" class="control-label"></label>
                <select asp-for="Applicant.CityId" class ="form-control" asp-items="ViewBag.CityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Applicant.ProfessionId" class="control-label"></label>
                <select asp-for="Applicant.ProfessionId" class ="form-control" asp-items="ViewBag.ProfessionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

